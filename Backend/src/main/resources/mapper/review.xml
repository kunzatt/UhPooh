<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.edu.user.model.dao.UserDao">

    <!-- 리뷰 목록 조회 -->
    <select id="reviewList" resultType="User">
        SELECT *
        FROM reviews
        WHERE reviewId = #{reviewID}
    </select>

    <!-- 리뷰 작성 -->
    <insert id="addReview" parameterType="User">
        INSERT INTO reviews (title, content, images)
        VALUES (#{title}, #{content}, #{images})
    </insert>

</mapper>